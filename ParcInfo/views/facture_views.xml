<odoo>
    <!-- Vue en liste -->
    <record id="facture_view_list" model="ir.ui.view">
        <field name="name">account.move.list.parc</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Factures Parc">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="invoice_date"/>
                <field name="state"/>
                <field name="parc_ref"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="facture_view_form" model="ir.ui.view">
        <field name="name">account.move.form.parc</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Facture Parc">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="parc_ref"/>
                        <field name="parc_ticket_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="facture_action" model="ir.actions.act_window">
        <field name="name">Factures Parc</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('parc_ref', '!=', False)]</field>
    </record>
</odoo>
